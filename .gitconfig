#  ┌─┐┬┌┬┐┌─┐┌─┐┌┐┌┌─┐┬┌─┐
#  │ ┬│ │ │  │ ││││├┤ ││ ┬
#  └─┘┴ ┴ └─┘└─┘┘└┘└  ┴└─┘
[user]
  name = Evan Turner
  email = ev@evturn.com
[core]
  editor = vim
  precomposeunicode = false
[color]
  ui = always
[color "advice"]
  hint = cyan
[color "branch"]
  current = green
  local = red
  remote = blue
[color "decorate"]
  HEAD = green
  branch = red
  remoteBranch = blue
[color "diff"]
  meta = white
  commit = blue
  frag = cyan
  old = red bold
  new = green bold
[color "status"]
  added = green
  changed = yellow
  untracked = cyan
[commit]
  gpgsign = true
[diff]
  renames = copies
  tool = vimdiff
[diff "bin"]
  textconv = hexdump -v -C
[filter "lfs"]
  clean = git-lfs clean %f
  smudge = git-lfs smudge %f
  required = true
[format]
  pretty = barf
[gpg]
  program = gpg2
[help]
  autocorrect = 1
[log]
  abbrevCommit = true
[merge]
  log = true
[pretty]
  barf = "format:%Cblue⏣  %Cred%h %>(14)%Creset%cr %Cblue%GK %n%Cred|%>(12)%Cgreen %s %Cred%n%Cred|%>(3)%Creset Author: %<|(12)%Creset %an - %aD %n%Cred|%Creset Committer: %<|(12)%Creset %cn - %cD %n%Cred|%n%Cred|"
[pull]
  rebase = true
[push]
  default = current
[status]
  showUntrackedFiles = all
[web]
  brower = firefox
[alias]
  aliases = !git config --list | grep 'alias\\.' | sed 's/alias\\.\\([^=]*\\)=\\(.*\\)/\\1\\ \t => \\2/' | sort
  amend = commit --amend --reuse-message=HEAD
  branches = "for-each-ref --sort='-committerdate:iso8601' --format='%(authordate:relative)%09%(refname:short)' refs/heads"
  c = commit -S -m
  d = !"git diff-index --quiet HEAD -- || clear; git --no-pager diff --patch-with-stat"
  di = !"d() { git diff --patch-with-stat HEAD~$1; }; git diff-index --quiet HEAD -- || clear; d"
  contributors = shortlog --summary --numbered
  l = log
