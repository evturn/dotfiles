#  ┌─┐┬┌┬┐┌─┐┌─┐┌┐┌┌─┐┬┌─┐
#  │ ┬│ │ │  │ ││││├┤ ││ ┬
#  └─┘┴ ┴ └─┘└─┘┘└┘└  ┴└─┘
#
#
[alias]
  aliases = !git config --list | grep 'alias\\.' | sed 's/alias\\.\\([^=]*\\)=\\(.*\\)/\\1\\ \t => \\2/' | sort
  amend = commit --amend --reuse-message=HEAD
  branches = "for-each-ref --sort='-committerdate:iso8601' --format='%(authordate:relative)%09%(refname:short)' refs/heads"
  c = commit -S -m
  contributors = shortlog --summary --numbered
  d = !"git diff-index --quiet HEAD -- || clear; git --no-pager diff --patch-with-stat"
  di = !"d() { git diff --patch-with-stat HEAD~$1; }; git diff-index --quiet HEAD -- || clear; d"
  l = !"git log --pretty='format:%n%Cblue %h   %Cgreen %s %Cblue%GK  %n Author:    %an %aD %n Committer: %cn %cD %n %cr' --shortstat"
  nogpg = !"git config commit.gpgSign false"

[color]
  ui = always

[color "branch"]
  current = green
  local = red
  remote = blue

[color "decorate"]
  HEAD = green
  branch = red
  remoteBranch = blue

[color "diff"]
  meta = #657b83
  commit = #5fafff
  frag = #003847
  old = #ff0087
  new = #00ffaf

[color "status"]
  added = blue
  changed = #ff0087
  untracked = #00ffaf

[commit]
  gpgsign = true

[core]
  editor = vim
  precomposeunicode = false

[diff]
  renames = copies

[diff "bin"]
  textconv = hexdump -v -C

[filter "lfs"]
  clean = git-lfs clean %f
  smudge = git-lfs smudge %f
  required = true

[gpg]
  program = gpg2

[help]
  autocorrect = 1

[merge]
  log = true

[push]
  default = current

[user]
  name = hl
  email = ev@evturn.com
  name = Evan Turner

[web]
  brower = firefox
