if [ "$(uname)" = "Darwin" ]; then
  export PATH="$HOME/.rvm/gems/ruby-2.4.0/bin"
fi

export PATH="/bin:/sbin:/usr/bin:/usr/local/bin:/usr/local/sbin:$PATH" # binaries

export NVM_DIR="$HOME/.nvm"                                            # nvm
[ -s "$NVM_DIR/nvm.sh" ] && . "$NVM_DIR/nvm.sh"

export PATH="$HOME/.yarn/bin:$PATH"                                    # yarn

export PATH="$HOME/.local/bin:$PATH"


if [ "$(uname)" = "Darwin" ]; then
  export PATH="$(brew --prefix coreutils)/libexec/gnubin:$PATH"        # GNU

  export PATH="$HOME/Library/Python/3.6:$PATH"                         # Python
  export PATH="/usr/local/opt/python/libexec/bin:$PATH"

  export PATH="$HOME/Library/Haskell/bin:$PATH"                        # Haskell
  export PATH="$HOME/.cabal/bin:$PATH"

  export PATH="$HOME/src/mongodb/bin:$PATH"                            # MongoDB

  export PATH="$HOME/.fastlane/bin:$PATH"                              # Fastlane

  export PATH="${PATH}:/usr/local/opt/android-sdk/tools"               # Android
  export PATH="${PATH}:/usr/local/opt/android-sdk/platform-tools"

  export PATH="$PATH:$HOME/.rvm/bin"                                   # rvm
  [[ -s "$HOME/.rvm/scripts/rvm" ]] && source "$HOME/.rvm/scripts/rvm"
fi
